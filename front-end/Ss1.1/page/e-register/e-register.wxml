<!--page/register/register.wxml-->
<view class="container">
  <view class="reg-hd">
   <view class='header'>
      <view class="userinfo-avatar">
       <open-data  type="userAvatarUrl"></open-data>
      </view>
    </view>
    <view class="reghd-text">
     <text>{{text}}</text>
    </view>
     <view class="weui-uploader__files">
        <view class="weui-uploader__input-box">
          <view class="weui-uploader__input" bindtap="chooseImage"></view>
        </view>
          <view wx:for="{{imageList}}" wx:key="*this" wx:for-item="image">
            <view class="weui-uploader_file">
              <image class="weui-uploader__img" src="{{image}}" data-src="{{image}}" bindtap="previewImage"></image>
            </view>
          </view>
        
          
          
      </view>
  </view>
  <view class="reg-bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="商铺名字" focus/>
        </view>
      </view>
     <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="主营范围" focus/>
        </view>
      </view>
     <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="人均消费（元/人）" type='number'/>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="营业执照编码" focus/>
        </view>
      </view>
      <view class="section-stimage">
          <view class="section-sttext">营业执照上传</view>
           <view class="weui-uploader__input-box">
          <view class="weui-uploader__input" bindtap="chooseImage"></view>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="联系电话" type='number'/>
        </view>
      </view>
      <view class="store-locat">商铺定位</view>
      <view class="section">
       <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
       <view class="picker">当前选择：{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
       </picker>
      </view>
    </form>
    </view>
   
</view>
