<!--page/m-register/m-register.wxml-->
<view class="container">
  <view class="reg-hd">
    <view class="userinfo-avatar">
       <open-data  type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class="reg-bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="商铺名字" focus/>
        </view>
      </view>
     <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="主营范围" focus/>
        </view>
      </view>
     <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="人均消费（元/人）" type='number'/>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" placeholder="联系电话" type='number'/>
        </view>
      </view>
      <view class="store-locat">摊位定位</view>
      <view class="section">
       <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
       <view class="picker">当前选择：{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
       </picker>
      </view>
    </form>
    </view>
   
</view>
